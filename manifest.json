{
  "description": "Plugin for Now Playing OBS",
  "manifest_version": 2,
  "name": "Now Playing OBS Firefox Plugin",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "*://*.youtube.com/watch*",
    "*://open.spotify.com/",
    "*://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["youtube.js"]
    },
    {
      "matches": ["*://open.spotify.com/"],
      "js": ["spotify.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "myst33d@gmail.com"
    }
  }
}
