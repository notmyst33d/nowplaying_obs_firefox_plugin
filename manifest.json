{
  "description": "Plugin for Now Playing OBS",
  "manifest_version": 2,
  "name": "Now Playing OBS Plugin",
  "version": "1.0.2",
  "permissions": [
    "activeTab",
    "*://*.youtube.com/*",
    "*://open.spotify.com/*",
    "*://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.js"]
    },
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["spotify.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{7f02981b-0203-4436-8220-96c019bb7653}"
    }
  }
}
